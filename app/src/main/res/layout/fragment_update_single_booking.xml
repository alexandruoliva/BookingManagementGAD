<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentUpdateBooking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".GUI.FRAGMENTS.UpdateSingleBookingFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:text="Update booking:"
        android:textColor="#090808"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/editTextLastNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/editTextFirstNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastNameUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPhoneNumberUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone No."
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstNameUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPricePerNightUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Price/night"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhoneNumberUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNumberOfRoomsUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="No. of rooms booked"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPricePerNightUpdate"
        app:layout_constraintVertical_bias="0.00999999" />

    <EditText
        android:id="@+id/editTextCheckInDateUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Check-in date"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberOfRoomsUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextCheckOutDateUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Check-out date"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCheckInDateUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTypeOfBookingUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type of booking"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCheckOutDateUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonUpdateBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:text="Udate booking"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateRoomAllCheckBox" />

    <CheckBox
        android:id="@+id/updateRoom1CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/updateRoom2CheckBox"
        app:layout_constraintTop_toBottomOf="@+id/editTextTypeOfBookingUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoom4CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updateRoom1CheckBox"
        app:layout_constraintStart_toStartOf="@+id/updateRoom5CheckBox"
        app:layout_constraintTop_toBottomOf="@+id/editTextTypeOfBookingUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoom2CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/updateRoom3CheckBox"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom1CheckBox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoom3CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/updateRoomUnderHouseCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom2CheckBox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoom5CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updateRoom2CheckBox"
        app:layout_constraintStart_toStartOf="@+id/updateRoom6CheckBox"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom4CheckBox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoom6CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updateRoom3CheckBox"
        app:layout_constraintStart_toStartOf="@+id/updateRoomAllCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom5CheckBox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoomUnderHouseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub casa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom3CheckBox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/updateRoomAllCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toata pensiunea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/updateRoomUnderHouseCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/updateRoom6CheckBox"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>